<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="zentlix_user.twig_extension.user" class="Zentlix\UserBundle\UI\Http\Web\Widget\User">
            <argument type="service" id="security.helper"/>
            <tag name="twig.extension"/>
        </service>
        <service id="zentlix_user.twig_extension.notification" class="Zentlix\UserBundle\UI\Http\Web\Widget\Admin\Notification">
            <argument type="service" id="security.helper"/>
            <argument type="service" id="Zentlix\UserBundle\Domain\Admin\Repository\NotificationRepository"/>
            <tag name="twig.extension"/>
        </service>
        <service id="zentlix_user.twig_extension.locale" class="Zentlix\UserBundle\UI\Http\Web\Widget\Admin\Locale">
            <argument type="service" id="zentlix_user.admin_settings"/>
            <argument type="service" id="Zentlix\MainBundle\Domain\Locale\Repository\LocaleRepository"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>