{% extends '@UserBundle/admin/layouts/auth.html.twig' %}

{% block title %}{{ 'zentlix_user.control_panel' | trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-md-6 col-lg-5">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <h1>{{ 'zentlix_user.authorization.authorization' | trans }}</h1>
                            <p class="text-muted">{{ 'zentlix_user.authorization.auth_admin_panel' | trans }}.</p>
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <form method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg class="c-icon">
                                        <use xlink:href="{{ admin_asset('vendors/@coreui/icons/svg/free.svg#cil-envelope-closed') }}"></use>
                                    </svg>
                                </span>
                                </div>
                                <input class="form-control {% if error %}is-invalid{% endif %}" type="email"
                                       placeholder="Email" value="{{ last_username }}" name="email" required autofocus>
                            </div>
                                <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <svg class="c-icon">
                                        <use xlink:href="{{ admin_asset('vendors/@coreui/icons/svg/free.svg#cil-lock-locked') }}"></use>
                                    </svg>
                                </span>
                                </div>
                                <input class="form-control {% if error %}is-invalid{% endif %}" type="password" name="password"
                                       placeholder="{{ 'zentlix_user.password' | trans }}" required>
                            </div>
                                <div class="row">
                                <div class="col-6">
                                    <button class="btn btn-primary px-4" type="submit">{{ 'zentlix_user.enter' | trans }}</button>
                                </div>
                                <!--<div class="col-6 text-right">
                                    <button class="btn btn-link px-0" type="button">Forgot password?</button>
                                </div>-->
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
