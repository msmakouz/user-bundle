{% extends '@MainBundle/admin/layouts/base.html.twig' %}

{% block title %}{{ 'zentlix_user.mailer.update.process' | trans }}{% endblock %}

{% block breadcrumbs %}
    <li class="breadcrumb-item"><a href="{{ path('admin.index') }}">{{ 'zentlix_main.control_panel' | trans }}</a></li>
    <li class="breadcrumb-item active">{{ 'zentlix_user.mailer.update.process' | trans }}</li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="card w-100">
            <div class="card-header">
                {{ 'zentlix_user.mailer.update.process' | trans }}
                {% include '@MainBundle/admin/partials/delete_confirmation.html.twig' with {
                    'title': 'zentlix_user.mailer.delete.action',
                    'confirmation': 'zentlix_user.mailer.delete.confirm',
                    'path': path('admin.mailer.delete', {'id': template.id})
                } %}
            </div>
            {{ form_start(form) }}
            <div class="card-body">
                {{ form_widget(form) }}
            </div>
            <div class="card-footer">
                <button class="btn btn-sm btn-primary" type="submit">
                    <i class="fa fa-dot-circle-o"></i> {{ 'zentlix_main.save' | trans }}
                </button>
                <a href="{{ path('admin.mailer.list') }}" class="btn btn-sm btn-secondary" type="button">{{ 'zentlix_main.cancel' | trans }}</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}